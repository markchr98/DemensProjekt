@model DemensProjekt.Models.Account.RegisterViewModel
@{
    ViewBag.Title = "Logind eller opret en bruger";
    Layout = "_Layout";
}

<div id="logincontainer">
    <div class="coloumn">
        <div class="formcontainer">
            <h2>Log Ind</h2>
            <form >
                <input placeholder="Brugernavn"/>
                <input type="password" placeholder="Kodeord" />
                <div>
                    <p>Husk mig</p>
                    <input type="checkbox" />
                </div>
                <button type="submit" class="btnlogin">Login</button>
            </form>
        </div>
    </div>
    <div class="vl"></div>
    <div class="coloumn">
        <div class="formcontainer">
        <h2>Opret Bruger</h2>        
        <form role="form" asp-action="Register" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

            <input placeholder="Email" type="email" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>

            <input placeholder="Brugernavn" asp-for="Username" />
            <span asp-validation-for="Username"></span>

            <input placeholder="Adgangskode" type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>

            <input placeholder="Gentag Adgangskode" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>

            <button type="submit" class="btnopret">Opret</button>
        </form>
        </div>
    </div>
</div>